{
  "name": "apps-script-vite-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "setup": "node scripts/setup-rootdir.js",
    "prebuild": "npm run setup",
    "build": "vite build",
    "push": "npm run build && clasp push",
    "deploy": "npm run push && node scripts/deploy.js",
    "deploy:new": "npm run push && clasp create-deployment",
    "deploy:interactive": "npm run push && node scripts/deploy-interactive.js",
    "deployments": "clasp list-deployments"
  },
  "devDependencies": {
    "vite": "^7.1.10",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
