{
  "name": "apps-script-vite-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:open": "vite --open",
    "setup": "node scripts/setup-rootdir.js",
    "prebuild": "npm run setup",
    "build": "vite build",
    "staging": "npm run build && clasp push",
    "staging:open": "node scripts/open-staging.js",
    "prod": "npm run build && clasp push && node scripts/deploy.js",
    "prod:open": "node scripts/open-prod.js",
    "prod:new": "npm run build && clasp push && node scripts/deploy-new.js",
    "deployments": "clasp list-deployments"
  },
  "devDependencies": {
    "vite": "^7.1.10",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
